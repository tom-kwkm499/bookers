

<h1>Books</h1>

<table>
  <thead>
      <th>Title</th>
      <th>Body</th>
      <th></th>
      <th></th>
      <th></th>
  </thead>

  <tbody>
  <% @books.each do |book| %>

    <tr>
      <td class=booktitle><%=book.title %></td>
      <td class=bookbody><%=book.body %></td>
      <td class=button><%=link_to "Show", book_path(book.id) %></td>
      <td class=button><%=link_to "Edit", edit_book_path(book.id) %></td>
      <td class=button><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
    </tr>
  <% end %>
  </tbody>

</table>


<%# 以下新規投稿機能%>

<h2>New book</h2>
<%# 新規投稿に関するエラー記述未記入%>

<!-- form_with部分 -->
<%= form_with model: @book, url: '/books', method: :post do |f| %>
  
  <h4>Title</h4>
  <%= f.text_field :title %>
	
  <h4>Body</h4>
  <%= f.text_area :body %>
	
  <%= f.submit 'Create Book' %>


<% end %>

